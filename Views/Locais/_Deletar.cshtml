@model LocaisModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OnEntrée</title>
    <link rel="stylesheet" href="~/css/Modais.css">
</head>
<body>
    <div id="fundoModal">
        <p class="text-white">Você tem certeza que deseja apagar o local @Model.NomeLocal</p>        
    </div>
    <div id="Botoes">
        <a class="btn" id="btnCancelar" asp-area="" asp-controller="Locais" asp-action="Index">Cancelar</a>
        <a class="btn" method="post" id="btnApagar" asp-area="" asp-controller="Locais" asp-action="Delete" asp-route-id="@Model.Id"><b>Apagar</b></a>
    </div>
    
</body>

</html>

